@model CargoViewModel
@{
    ViewData["Title"] = "Crear nuevo cargo";
}
<h2 class="text-center mb-4">@ViewData["Title"]</h2>
@if ((bool)ViewData["creado"])
{
    <div class="alert alert-success alert-dismissible fade show mx-auto" style="max-width: 600px" role="alert">
        El usuario se ha creado con éxito
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-action="RegistroCargo">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card mt-3 mx-auto" style="max-width: 600px">
        <div class="card-header">
            Datos de usuario
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Nombres" class="form-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ApellidoPaterno" class="form-label"></label>
                <input asp-for="ApellidoPaterno" class="form-control" />
                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ApellidoMaterno" class="form-label"></label>
                <input asp-for="ApellidoMaterno" class="form-control" />
                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
            </div>
            <div class="mb-3 obligatorio">
                <label asp-for="Rol" class="form-label"></label>
                <select asp-for="Rol" asp-items='(SelectList)ViewData["RolesSelect"]' class="form-select">
                    <option value="">Seleccione un valor para este campo</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FechaIngreso" class="form-label"></label>
                <input asp-for="FechaIngreso" class="form-control" type="date" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <div class="small text-secondary">Se recomienda ingrese una contraseña fuerte</div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Crear usuario</button>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}