@using Microsoft.AspNetCore.Identity
@inject SignInManager<CustomIdentityUser> SignInManager
@inject UserManager<CustomIdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Cuentas" asp-action="Perfil">Hola @(User.Identity?.Name)!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Cuentas" asp-action="Lougout" asp-route-returnUrl="@Url.Action("Index","Home")">Salir</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Conductor" asp-action="RegistroConductor">Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Conductor" asp-action="LoginConductor">Iniciar sesión</a>
        </li>

    }
</ul>
